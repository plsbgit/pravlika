<!DOCTYPE html>
<html>
<head>
 <script>
 function calculateFactorial() {
 var num = prompt("Enter a number:");
 var result = 1;
 if (num === null || isNaN(num)) {
 return "Invalid input. Please enter a valid number.";
 }
 num = parseInt(num);
 for (var i = 1; i <= num; i++) {
 result *= i;
 }
 return result;
 }
 var factorial = calculateFactorial();
 document.write("Factorial: " + factorial);
 </script>
</head>
