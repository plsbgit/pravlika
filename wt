2b.
<html>
<script>
function binary_search(array,target){
left=0;
right=array.length-1;
while(left<=right){
var mid=Math.floor((left+right)/2);
if(array[mid]===target){
return mid;
}
if(array[mid]<target){
left=mid+1;
}
else{
right=mid-1;
}
}
return -1;
}
var length=parseInt(prompt("Enter the length of the array:"));
var array=[];
for(let i=0;i<length;i++){
var element=parseInt(prompt("Enter element of index" +i+ ":"));
array.push(element);
}
var targetElement=parseInt(prompt("Enter the target element:"));
var resultIndex=binary_search(array,targetElement);
if(resultIndex!==-1){
document.writeln(`Found ${targetElement} at index ${resultIndex}`);
}
else{
document.writeln(`${targetElement} not found`);
}
</script>
</html>
